<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote_item" resource="default" engine="innodb" comment="Sales Flat Quote Item">
        <column xsi:type="varchar" name="door_model" nullable="true" length="128" comment="Selected Door Model"/>
        <column xsi:type="varchar" name="door_color" nullable="true" length="128" comment="Selected Door Color"/>
        <column xsi:type="varchar" name="cabinet_color" nullable="true" length="128" comment="Selected Cabinet Color"/>
    </table>
    <table name="sales_order_item" resource="default" engine="innodb" comment="Sales Flat Order Item">
        <column xsi:type="varchar" name="door_model" nullable="true" length="128" comment="Selected Door Model"/>
        <column xsi:type="varchar" name="door_color" nullable="true" length="128" comment="Selected Door Color"/>
        <column xsi:type="varchar" name="cabinet_color" nullable="true" length="128" comment="Selected Cabinet Color"/>
    </table>
</schema>

